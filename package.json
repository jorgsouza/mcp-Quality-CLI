{
  "name": "quality-mcp",
  "version": "0.1.0",
  "description": "MCP server para análise de repositórios e geração automatizada de testes Playwright",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "quality": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "cli": "node dist/cli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "mcp",
    "playwright",
    "e2e",
    "testing",
    "quality",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@playwright/test": "^1.40.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
